@model HunterW_Portfolio.Models.EmailModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="Minimal Portfolio Theme">
<meta name="keywords" content="responsive, retina ready, html5, css3, creative, portfolio, bootstrap theme" />
<meta name="author" content="KingStudio.ro">

<!-- favicon -->
<link rel="icon" href="~/Images/newfavicon.png">
<!-- page title -->
<title>Hunter Williams</title>
<!-- bootstrap css -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!-- css -->
<link href="~/Content/style.css" rel="stylesheet" />
<link href="~/Content/animate.css" rel="stylesheet" />
<!-- fonts -->
<link href="https://fonts.googleapis.com/css?family=Raleway:400,700,800,900" rel="stylesheet">
<link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
<link href='~/fonts/FontAwesome.otf' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="~/Content/linear-icons.css">

<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->

</head>

<body>

<!-- preloader -->
<div id="preloader">
    <div class="spinner spinner-round"></div>
</div>
<!-- / preloader -->

<!-- header -->
<header>
    <!-- nav -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Images/newlogo.png" alt="logo"></a>
            </div><!-- / navbar-header -->
            <div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>
						<a href="@Url.Action("Index", "Home")"><span>HOME</span></a>
					</li>
					<li>
						<a href="@Url.Action("About", "Home")"><span>ABOUT</span></a>
					</li>
					<li>
						<a href="@Url.Action("Portfolio", "Home")"><span>PORTFOLIO</span></a>
					</li>
					<li>
						<a href="@Url.Action("Codingchallenges", "Home")"><span>CODING CHALLENGES</span></a>
					</li>
					<li>
						<a href="@Url.Action("Resume", "Home")"><span>RESUME</span></a>
					</li>
					<li class="active">
						<a href="@Url.Action("Contact", "Home")"><span>CONTACT</span></a>
					</li>
				</ul>
            </div><!-- / container -->
        </div><!--/ nav-collapse -->
    </nav>
    <!-- / nav -->

    <!-- header-banner -->
    <div id="header-banner">
        <div class="banner-content single-page text-center">
            <div class="banner-info">
                <h1>CONTACT ME</h1>
                <p>Hit me up.</p>
            </div><!-- / banner-info -->
        </div><!-- / banner-content -->
    </div>
    <!-- / header-banner -->
</header>
<!-- / header -->

<!-- content -->

<div id="page-content" class="container">
    <div class="row contact-area">
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12 contact-info text-center space-bottom">
					<div class="contact-icon">
						<i class="lnr lnr-sync"></i>
					</div>
					<h5>SOCIAL</h5>
					<p class="social-contact">Twitter: <a href="https://twitter.com/DHunterW"><i class="fa fa-twitter"></i></a></p>
					<p class="social-contact">Instagram: <a href="https://www.instagram.com/wrathillumines"><i class="fa fa-instagram"></i></a></p>
					<p class="social-contact">LinkedIn: <a href="https://www.linkedin.com/in/hunter-williams-66791644/"><i class="fa fa-linkedin"></i></a></p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 contact-info text-center space-bottom">
					<div class="contact-icon">
						<i class="lnr lnr-envelope"></i>
					</div>
					<h5>EMAIL</h5>
					<p>Inquiries: <a href="mailto:hunterwilliams@northstate.net">hunterwilliams@northstate.net</a></p>
					<p>Other: <a href="mailto:hwphotog@gmail.com">hwphotog@gmail.com</a></p>
				</div>
			</div>
		</div>
		<div class="col-md-6 contact-form-area">
			<div id="contact-form">
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()

					@Html.ValidationSummary("", new { @class = "text-danger" })
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label text-right" })
							<div class="col-md-10">
								@Html.TextBoxFor(m => m.FromName, new { @class = "form-control", placeholder = "Your Name Here" })<br />
								@Html.ValidationMessageFor(m => m.FromName)
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label text-right" })
							<div class="col-md-10">
								@Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control", placeholder = "Your Email Adress" })<br />
								@Html.ValidationMessageFor(m => m.FromEmail)
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label text-right" })
							<div class="col-md-10">
								@Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject of Your Message" })<br />
								@Html.ValidationMessageFor(m => m.Subject)
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							@Html.LabelFor(m => m.Body, new { @class = "col-md-2 control-label text-right" })
							<div class="col-md-10">
								@Html.TextAreaFor(m => m.Body, new { @class = "form-control", placeholder = "Your Message", rows = 7 })<br />
								@Html.ValidationMessageFor(m => m.Body)
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-md-offset-2 col-md-10">
								<input type="submit" class="btn btn-primary" value="Send" /><br />
							</div>
						</div>
					</div>
				}
			</div>
		</div>
    </div>
</div>

<!-- / content -->

<!-- footer -->
<footer>
    <div class="container">
        <p class="footer-info">© 2019 HUNTER WILLIAMS
            <span class="social pull-right">
                <a href="https://twitter.com/DHunterW" target="_blank"><i class="fa fa-twitter"></i></a>
                <a href="https://www.instagram.com/wrathillumines/" target="_blank"><i class="fa fa-instagram"></i></a>
                <a href="https://www.linkedin.com/in/hunter-williams-66791644/" target="_blank"><i class="fa fa-linkedin"></i></a>
            </span>
        </p>
    </div><!-- / container -->
</footer>
<!-- / footer -->

<!-- javascript -->
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery.easing.min.js"></script>

<!-- contact-form -->
<script src="~/Scripts/validator.min.js" type="text/javascript"></script>
<script src="~/Scripts/form-scripts.js" type="text/javascript"></script>
<!-- / contact-form -->

<!-- preloader -->
<script src="~/Scripts/preloader.js"></script>
<!-- / preloader -->

<!-- / javascript -->
</body>

</html>